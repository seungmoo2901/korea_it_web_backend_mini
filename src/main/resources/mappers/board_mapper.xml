<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.BoardStudy.mapper.BoardMapper">
    <resultMap id="BoardResultMap" type="com.korit.BoardStudy.entity.Board">
        <id property="boardId" column="board_id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="userId" column="user_id" />
        <result property="createDt" column="create_dt" />
        <result property="updateDt" column="update_dt" />
    </resultMap>

    <insert id="addBoard">
        insert into
        board_tb
        values
        (0, #{title}, #{content}, #{userId}, now(), null)
    </insert>

    <select id="getBoardByBoardId" resultMap="BoardResultMap">
        select
        *
        from
        board_tb
        where
        board_id = #{boardId}
    </select>

    <select id="getBoardList" resultMap="BoardResultMap">
        select
        *
        from
        board_tb
    </select>

    <delete id="removeBoardByBoardId">
        delete from
            board_tb
        where
        board_id = #{boardId}
    </delete>

    <update id="updateBoardByBoardId">
        update
            board_tb
        set
            title = ${title},
            content = ${content},
            update_dt = now()
        where
            board_id = #{boardId}
    </update>
</mapper>